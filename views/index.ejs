<!-- Aqui se ocupa Materialize -->
<!DOCTYPE html>
<html>
<head>
  <title>Gestión de Tareas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Gestión de Tareas</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/login">Login</a></li>
        <li><a href="/tasks">Tareas</a></li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <% if (success_msg) { %>
      <div class="card-panel green">
        <span class="white-text"><%= success_msg %></span>
      </div>
    <% } %>
    <% if (error_msg) { %>
      <div class="card-panel red">
        <span class="white-text"><%= error_msg %></span>
      </div>
    <% } %>
    <h1>Bienvenido a la Gestión de Tareas</h1>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>