<!-- views/editTask.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Editar Tarea</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h2>Editar Tarea</h2>
    <form action="/tasks/edit/<%= task.id %>" method="POST">
      <div class="input-field">
        <input type="text" name="title" value="<%= task.title %>" required>
        <label for="title" class="active">Título</label>
      </div>
      <div class="input-field">
        <textarea name="description" class="materialize-textarea" required><%= task.description %></textarea>
        <label for="description" class="active">Descripción</label>
      </div>
      <div class="input-field">
        <input type="date" name="dueDate" value="<%= task.dueDate %>" required>
        <label for="dueDate" class="active">Fecha de Vencimiento</label>
      </div>
      <button class="btn waves-effect waves-light" type="submit">Actualizar</button>
    </form>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
